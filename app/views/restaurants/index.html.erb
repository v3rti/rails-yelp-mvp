
<h1 class="m-5">All Restaurants</h1>

<div class="container mt-5 ">
  <div class="d-flex flex-wrap gap-4 mx-auto">
  <% @restaurants.each do |restaurant|%>
    <div class="card" style="width: 18rem;">
      <img src="https://source.unsplash.com/random/éààXéàà" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
        <p class="card-text"><% restaurant.address %></p>
        <%= link_to "Check", restaurant_path(restaurant), class: 'btn btn-primary text-white' %>
        <%= link_to "Edit Restaurant", edit_restaurant_path(restaurant), class: 'btn btn-primary text-white' %>
        <%= link_to "Delete Restaurant", restaurants_path,class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

      </div>
    </div>
  <% end %>
  </div>
</div>
